<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimary"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/signUpLogo_IV"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:adjustViewBounds="true"
        android:src="@drawable/final_logo"
        />

    <ProgressBar
        android:id="@+id/signProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <EditText
        android:layout_margin="6dp"
        android:id="@+id/createFirstName_ET"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorSecondary"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorSecondary"
        android:textColorHint="@color/hintColor"
        android:hint="Fornavn"
        />

    <EditText
        android:layout_margin="6dp"
        android:id="@+id/createLastName_ET"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="Efternavn"
        android:backgroundTint="@color/colorSecondary"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorSecondary"
        android:textColorHint="@color/hintColor"
        />

    <EditText
        android:layout_margin="6dp"
        android:id="@+id/createEmail_ET"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:backgroundTint="@color/colorSecondary"
        android:ems="10"
        android:inputType="textWebEmailAddress"
        android:textColor="@color/colorSecondary"
        android:textColorHint="@color/hintColor"
        />


        <EditText
            android:layout_margin="6dp"
            android:id="@+id/createPassword_ET"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Adgangskode"
            android:backgroundTint="@color/colorSecondary"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/colorSecondary"
            android:textColorHint="@color/hintColor"
         />


        <Button
            android:layout_margin="6dp"
            android:id="@+id/signUp_BTN"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:text="Opret bruger"
            android:textColor="@color/textOnWhite"
            android:textSize="16sp"
            />

    <TextView
        android:layout_margin="6dp"
        android:id="@+id/backToLogin_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allerede oprettet? Log ind her"
        android:textColor="@color/colorSecondary"
        android:paddingBottom="16dp"
        />

    </LinearLayout>


</ScrollView>