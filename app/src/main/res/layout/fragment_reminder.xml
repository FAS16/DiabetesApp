<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fahadali.diabetesapp.Fragments.ReminderFragment">




    <android.support.v7.widget.RecyclerView
        android:id="@+id/reminder_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></android.support.v7.widget.RecyclerView>


    <TextView
        android:id="@+id/noReminders_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_add_alarm_black_24dp"
        android:text="Ingen pÃ¥mindelser"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/reminder_recyclerview"
        app:layout_constraintEnd_toStartOf="@+id/reminder_recyclerview"
        app:layout_constraintStart_toEndOf="@+id/reminder_recyclerview"
        app:layout_constraintTop_toBottomOf="@+id/reminder_recyclerview"
        app:layout_constraintVertical_bias="0.698" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addReminder_FAB"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:src="@drawable/ic_add_white_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>
