    <RelativeLayout
        android:id="@+id/type_rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:layout_marginTop="50dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/exclamation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_label"></ImageView>


        <TextView
            android:id="@+id/date_header2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/exclamation1"
            android:text="Type"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_header2"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/exclamation1"
            android:text="Fodterapeut"
            android:textSize="16sp" />


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/time_rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_rel"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="16dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:focusable="true">

        <ImageView
            android:id="@+id/exclamation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_access_time"
            android:background="@android:color/transparent">
        </ImageView>


        <TextView
            android:id="@+id/date_header3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tid"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/exclamation2"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="16/01/2018"
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            android:layout_below="@id/date_header3"
            android:layout_toRightOf="@+id/exclamation2"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/note_rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_rel"
        android:layout_marginTop="80dp"
        android:layout_marginRight="11dp"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:focusable="true">

        <ImageView
            android:id="@+id/exclamation3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:background="@android:color/transparent">
        </ImageView>


        <TextView
            android:id="@+id/date_header4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/exclamation3"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Ikke tilføjet"
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            android:layout_below="@id/date_header4"
            android:layout_toRightOf="@+id/exclamation3"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/repeat_rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_rel"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="80dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/exclamation4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_repeat"></ImageView>


        <TextView
            android:id="@+id/date_header5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/exclamation4"
            android:text="Gentag"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_header5"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/exclamation4"
            android:text="En gang"
            android:textSize="16sp" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/prio_rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/note_rel"
        android:layout_marginRight="11dp"
        android:layout_marginTop="80dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/exclamation7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_error_outline"></ImageView>


        <TextView
